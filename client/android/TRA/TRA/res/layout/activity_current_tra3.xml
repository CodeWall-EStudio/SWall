<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tra_info_detail_wrapper"
            android:id="@+id/listview"
            android:layout_weight="2"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"
            ></ListView>

    <TableLayout
            android:layout_below="@+id/tra_info_detail_wrapper"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_column="3"
            android:layout_row="1"
            android:weightSum="2"
            android:layout_weight="0"
            android:layout_above="@+id/join_button"
            android:id="@+id/collection"
            android:visibility="visible"
            >

        <TableRow
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_weight="1"
                android:paddingBottom="1dp">
            <TextView
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="拍照"
                    android:id="@+id/btnPhoto"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:drawableTop="@drawable/btn_photo"
                    android:background="@drawable/btn_bg"
                    android:layout_marginRight="1dp"/>

            <TextView
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="录像"
                    android:id="@+id/btnRecordVideo"
                    android:drawableTop="@drawable/btn_video_record"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/btn_bg"
                    android:layout_marginRight="1dp"
                    />
            <TextView
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="评论"
                    android:drawableTop="@drawable/btn_text"
                    android:id="@+id/btnText"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/btn_bg"
                    />

        </TableRow>
    </TableLayout>

    <LinearLayout
            android:layout_weight="0"
            android:id="@+id/join_button"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:orientation="horizontal">
        <TextView
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="退出活动"
                android:src="@android:drawable/arrow_down_float"
                android:id="@+id/btnQuit"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_bg"

                />
    </LinearLayout>
</LinearLayout>